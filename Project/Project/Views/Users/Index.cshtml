@model IEnumerable<Project.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Email Confirmed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.EmailConfirmed</td>
                <td>
                    @* Don't allow the admin to delete their own account from the UI *@
                    @if (User.Identity?.Name != user.UserName)
                    {
                        <a asp-action="Delete" asp-route-id="@user.Id" class="text-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
