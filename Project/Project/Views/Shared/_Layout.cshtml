@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University Portal</title>
    <!-- Modern Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap and Main Stylesheet -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">University Portal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* --- UI RESTRICTION LOGIC --- *@
                        @if (SignInManager.IsSignedIn(User))
                        {
                            // Links visible only to Admins
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Departments" asp-action="Index">Departments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="CourseStudents" asp-action="Index">Enrollments</a>
                                </li>
                                <!-- === THIS IS THE NEW LINK === -->
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="Index">Manage Users</a>
                                </li>
                            }

                            // Link visible to Admins and HR
                            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Instructors" asp-action="Index">Instructors</a>
                                </li>
                            }

                            // Link visible to Admins, HR and Instructors
                            @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Instructor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Students" asp-action="Index">Students</a>
                                </li>
                            }

                            // Link visible to everyone who is logged in
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Courses" asp-action="Index">Courses</a>
                            </li>
                        }
                    </ul>

                    @* This partial view handles the Login/Register/Logout links automatically *@
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted py-3">
        <div class="container">
            &copy; 2025 - University Portal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

